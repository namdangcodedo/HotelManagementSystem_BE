{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FrontendSettings": {
    "BaseUrl": "http://localhost:3000"
  },
  "Google": {
    "ClientId": "",
    "ClientSecret": "",
    "RedirectUri": ""
  },
  "Jwt": {
    "Key": "REPLACE_WITH_YOUR_SECRET_KEY_AT_LEAST_32_CHARS",
    "Issuer": "AppBackend",
    "Audience": "AppBackendUsers",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },
  "EmailSettings": {
    "SenderEmail": "your-email@example.com",
    "Password": "your-password",
    "SmtpServer": "smtp.gmail.com",
    "Port": "587"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=hotel_management;User Id=sa;Password=YourPassword;TrustServerCertificate=True;"
  },
  "CloudinarySettings": {
    "CloudName": "your-cloud-name",
    "ApiKey": "your-api-key",
    "ApiSecret": "your-api-secret"
  },
  "PayOS": {
    "BaseUrl": "https://api-merchant.payos.vn",
    "ClientId": "your-client-id",
    "ApiKey": "your-api-key",
    "ChecksumKey": "your-checksum-key",
    "ReturnUrl": "http://localhost:3000/booking/success",
    "CancelUrl": "http://localhost:3000/booking/cancel",
    "WebhookSecret": "your-webhook-secret"
  },
  "GoogleAuth": {
    "ClientId": "your-google-client-id",
    "ClientSecret": "your-google-client-secret",
    "RedirectUri": "http://localhost:8080/api/Authentication/callback-google",
    "JavascriptOrigin": "http://localhost:8080"
  }
}

